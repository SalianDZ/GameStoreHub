@model GamePreDeleteViewModel

@{
    ViewBag.Title = "Delete Game";
}

<h2 class="text-center" style="margin-top:15px;">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form asp-action="Delete">
                <div class="text-center mb-3">
                    <img src="@Url.Content($"~/{Model.ImagePath}")" alt="Game Image" class="img-responsive" style="max-width: 100%; height: auto;">
                </div>
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" disabled="disabled" />
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>