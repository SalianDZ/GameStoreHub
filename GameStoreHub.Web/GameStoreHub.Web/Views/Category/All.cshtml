@model IEnumerable<CategoryViewModel>

<nav id="navigation">
	<!-- container -->
	<div class="container">
		<!-- responsive-nav -->
		<div id="responsive-nav">
			<!-- NAV -->
			<ul class="main-nav nav navbar-nav">
				<li><a asp-controller="Home" asp-action="Index">Home</a></li>
				<li class="active"><a asp-controller="Category" asp-action="All">Categories</a></li>
				<li><a asp-controller="Game" asp-action="OwnedGames">My Games</a></li>
			</ul>
			<!-- /NAV -->
		</div>
		<!-- /responsive-nav -->
	</div>
	<!-- /container -->
</nav>

	<!-- SECTION -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- shop -->
				@foreach (var category in Model)
				{
					<div class="col-md-4 col-xs-6">
						<div class="shop">
							<div class="shop-img">
							<img src="@Url.Content($"~/{category.ImagePath}")" alt="@category.Name">
							</div>
							<div class="shop-body">
								<h3><br>@category.Name</h3>
							<a asp-controller="Game" asp-action="GamesByCategory" asp-route-id="@category.Id" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
							</div>
						</div>
					</div>
				}
				<!-- /shop -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>