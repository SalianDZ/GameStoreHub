@model CheckoutViewModel
<!-- NAVIGATION -->
<nav id="navigation">
	<!-- container -->
	<div class="container">
		<!-- responsive-nav -->
		<div id="responsive-nav">
			<!-- NAV -->
			<ul class="main-nav nav navbar-nav">
				<li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
				<li><a asp-controller="Category" asp-action="All">Categories</a></li>
				<li><a asp-controller="Game" asp-action="OwnedGames">My Games</a></li>
			</ul>
			<!-- /NAV -->
		</div>
		<!-- /responsive-nav -->
	</div>
	<!-- /container -->
</nav>
<!-- /NAVIGATION -->
<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-md-12">
				<h3 class="breadcrumb-header">Checkout</h3>
				<ul class="breadcrumb-tree">
					<li><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li class="active">Checkout</li>
				</ul>
			</div>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<form asp-controller="Order" asp-action="Checkout" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="col-md-7">
				<!-- Billing Details -->
				<div class="billing-details">
					<div class="section-title">
						<h3 class="title">Billing address</h3>
					</div>
					<div class="form-group">
							<input class="input" asp-for="BillingData.Address" type="text" placeholder="Address">
							<span asp-validation-for="BillingData.Address" class="small text-danger"></span>
					</div>
					<div class="form-group">
						<input class="input" type="text" placeholder="City" asp-for="BillingData.City">
							<span asp-validation-for="BillingData.City" class="small text-danger"></span>
					</div>
					<div class="form-group">
						<input class="input" type="text" placeholder="Country" asp-for="BillingData.Country">
							<span asp-validation-for="BillingData.Country" class="small text-danger"></span>
					</div>
					<div class="form-group">
						<input class="input" type="text" placeholder="ZIP Code" asp-for="BillingData.ZipCode">
							<span asp-validation-for="BillingData.ZipCode" class="small text-danger"></span>
					</div>
					<div class="form-group">
						<input class="input" type="tel" placeholder="Telephone" asp-for="BillingData.PhoneNumber">
							<span asp-validation-for="BillingData.PhoneNumber" class="small text-danger"></span>
					</div>
				</div>
				<!-- /Billing Details -->
				<!-- Order notes -->
				<div class="order-notes">
					<textarea class="input" placeholder="Order Notes" asp-for="BillingData.OrderNotes"></textarea>
						<span asp-validation-for="BillingData.OrderNotes" class="small text-danger"></span>
				</div>
				<!-- /Order notes -->
			</div>

				<!-- Order Details -->
				<div class="col-md-5 order-details">
					<div class="section-title text-center">
						<h3 class="title">Your Order</h3>
					</div>
					<div class="order-summary">
						<div class="order-col">
							<div><strong>PRODUCT</strong></div>
							<div><strong>TOTAL</strong></div>
						</div>
						<div class="order-products">
							@if (Model.Items.Count() <= 0)
							{
								<h3>No added products into your cart</h3>
							}
							else
							{
								@foreach (var product in Model.Items)
								{
									<div class="order-col">
										<div>@product.GameTitle</div>
										<div>$@product.PriceAtPurchase</div>
									</div>
								}
							}
						</div>
						<div class="order-col">
							<div><strong>TOTAL</strong></div>
							<div><strong class="order-total">$@Model.TotalPrice</strong></div>
						</div>
					</div>
					<div class="input-checkbox">
						<input type="checkbox" id="terms">
						<label for="terms">
							<span></span>
							I've read and accept the terms & conditions
						</label> 
					</div>
						<input type="submit" class="primary-btn order-submit" value="Submit order">
				</div>
				<!-- /Order Details -->
			</form>
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->